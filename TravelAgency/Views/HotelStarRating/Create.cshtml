@model TravelAgency.Models.HotelStarRating

@{
    ViewData["Title"] = "Добавление";
}

<h4>Звездный рейтинг отеля</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Stars" class="control-label"></label>
                <input asp-for="Stars" class="form-control" />
                <span asp-validation-for="Stars" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group btn-group">
                <input type="submit" value="Добавить" class="btn btn-info" />
                <a class="btn btn-sm btn-outline-info" asp-action="Index">Вернуться к списку</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
